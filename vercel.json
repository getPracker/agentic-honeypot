{
    "version": 2,
    "builds": [
        {
            "src": "api/index.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb"
            }
        },
        {
            "src": "api/ping.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/ping",
            "dest": "api/ping.py"
        },
        {
            "src": "/health",
            "dest": "api/index.py"
        },
        {
            "src": "/api/(.*)",
            "dest": "api/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "api/index.py"
        }
    ],
    "functions": {
        "api/index.py": {
            "maxDuration": 30
        }
    }
}